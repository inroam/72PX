<% include ../header  %>
<main id="works">
    <!----------------摄影投稿 开始----------------------->
    <header class="container-fluid">
        <div class="clearfix">
            <div class="col-lg-6">全部 > 位摄影师</div>
            <div class="col-lg-6 text-right">
                <a href="photographers/create/">投稿</a>
            </div>
        </div>
    </header>
    <article id="worksMain" class="container-fluid items">
        <form method="post"  class="row"  onsubmit="return checkWorks()">
            <div class="col-lg-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="标题">
                </div>
                <div class="form-group">
                    <textarea id="worksContent" name="worksContent" placeholder="请输入内容"></textarea>
                </div>
                <div class="form-group">
                    <!------------------------upload 开始-------------------->
                    <div id="uploader">
                        <div class="queueList">
                            <div id="dndArea" class="placeholder">
                                <div id="filePicker"></div>
                                <p>或将照片拖到这里，单次最多可选20张</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress">
                                <span class="text">0%</span>
                                <span class="percentage"></span>
                            </div><div class="info"></div>
                            <div class="btns">
                                <div id="filePicker2"></div><div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>
                    <!------------------------upload 结束-------------------->
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn-primary btn-lg" value="投稿" />
                </div>
            </div>
            <div class="col-lg-6">

            </div>
        </form>
    </article>
    <!----------------摄影投稿 结束----------------------->
</main>
<% include ../footer %>
