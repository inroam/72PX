<% include header  %>
<main id="sy">
    <!----------------摄影排行榜 开始----------------------->
    <header class="container-fluid">全部 > <%= sys.count %>位摄影师</header>
    <article id="syMain" class="container-fluid items">
        <ul>
            <% sys.data.forEach(function(sy, index){ %>
            <li class="row">
                <div class="syer col-lg-4 col-sm-4">
                    <div class="row">
                        <a href="javascript:void(0)" class="avatar ashow col-lg-4 col-sm-4"><img src="<%= sy.cover %>" class="img-responsive" /> </a>
                        <div class="info col-lg-8 col-sm-8">
                            <h3><%= sy.name %></h3>
                            <p class="hits text-muted">风格：<%= sy.style %></p>
                            <p class="hits text-muted">认证：<%= sy.tags %></p>
                            <p class="text-muted">器材：<%= sy.camera %></p>
                            <p class="text-muted">镜头：<%= sy.shot %></p>
                        </div>
                    </div>
                </div>
                <div class="ablum detail<%= index %> col-lg-8 col-sm-8">
                    <div class="row">
                        <% sy.imageList.forEach(function(image, index){ %>
                        <% if(index < 4){ %>
                        <a href="javascript:void(0)" class="show col-lg-3 col-sm-3"><img src="<%= image %>" class="img-responsive detailImg<%= index %>" /></a>
                        <% } %>
                        <% }) %>
                    </div>
                </div>
            </li>
            <% }) %>
        </ul>
    </article>
    <!----------------摄影排行榜 结束----------------------->
</main>
<% include footer %>
<script src="/js/sy.js"></script>