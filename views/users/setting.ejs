<% include ../header  %>
<main id="setting">
    <!----------------个人设置 开始----------------------->
    <header class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"> 完善基本资料，可以获得更高人气！</span>
            </div>
            <div class="col-lg-6 text-right">
                <a href="users/setting">基本资料</a>
                <a href="users/sns">社交绑定</a>
                <a href="users/password">修改密码</a>
            </div>
        </div>
    </header>
    <article id="settingMain" class="container">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">头像：</label>
                <div class="col-sm-8">
                    <div id="uploader-demo">
                        <!--用来存放item-->
                        <div id="fileList" class="uploader-list"></div>
                        <div id="filePicker">上传头像</div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">昵称：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="userNick" id="userNick" placeholder="填写你的显示名称">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">邮箱：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="userEmail" id="userEmail" placeholder="填写你的邮箱（不公开）">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">手机：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="userMobile" id="userMobile" placeholder="留下手机，方便72PX可以联系你（不公开">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">性别：</label>
                <div class="col-sm-8">
                    <label class="radio-inline">
                        <input type="radio" name="userSex" value="0"> 女
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="userSex" value="1"> 男
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">简介：</label>
                <div class="col-sm-8">
                    <textarea class="form-control" rows="3" name="userDesc" id="userDesc" placeholder="一句话介绍一下自己吧，让别人更了解你"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-danger btn-lg btn-block">更 新</button>
                </div>
            </div>
        </form>
    </article>
    <!----------------个人设置 结束----------------------->
</main>
<% include ../footer %>